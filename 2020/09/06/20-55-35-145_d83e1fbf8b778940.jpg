  display: none;
}
.wheel-selector__button {
  background: var(--primary-brand-color);
  position: absolute;
  display: block;
  cursor: pointer;
  top: 0;
  width: 100%;
  padding-bottom: 102%;
  opacity: 0;
}
.wheel-selector__button:hover {
	mix-blend-mode: overlay;
	opacity: 1;
}
.wheel-selector__button:nth-of-type(1) {
  clip-path: polygon(51% 0%, 51% 28%, 67% 35%, 89% 18%, 72% 4%);
}
