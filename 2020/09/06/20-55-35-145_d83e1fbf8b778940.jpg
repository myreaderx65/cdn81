}
.wheel-selector__button:nth-of-type(5) {
  clip-path: polygon(28% 56%, 39% 69%, 27% 94%, 10% 82%, 0% 62%);
}
.wheel-selector__button:nth-of-type(6) {
  clip-path: polygon(9% 19%, 32% 37%, 28% 53.5%, 0% 60%, 0% 37%);
}
.wheel-selector__button:nth-of-type(7) {
  clip-path: polygon(49% 0%, 49% 28%, 33% 35%, 11% 18%, 28% 4%);
